@model ToDo.Web.Models.Do.DoDetailsViewModel

@{ 
    ViewData["Title"] = "Информация о задаче " + Model.Title;
}

    <div class="detailsForm">
        <form>
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.Title)
                @Html.DisplayFor(m => m.Title)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)

                @if (Model.Description != null)
                {
                    @Html.DisplayFor(m => m.Description)
                }
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.DisplayFor(m => m.Status)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Executors)

                @if (Model.Executors != null)
                {
                    @Html.DisplayFor(m => m.Executors)
                }
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Created)
                @Html.DisplayFor(m => m.Created)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Done)

                @if (Model.Done != null)
                {
                    @Html.DisplayFor(m => m.Done)
                }
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Plan)
                @Html.DisplayFor(m => m.Plan)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Fact)

                @if (Model.Fact != default(int))
                {
                    @Html.DisplayFor(m => m.Fact)
                }
            </div>

            @if (Model.SubTasks.Any())
            {
        <div class="form-group">
            @foreach (var sub in Model.SubTasks)
            {
                <div>@sub.Title</div>
                <div>@sub.Plan</div>
            }
        </div>
            }
            

            <button class="back" type="submit" asp-controller="Do" asp-action="Index">Назад</button>
        </form>
    </div>